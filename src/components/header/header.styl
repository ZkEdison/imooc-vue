@import "./../../common/stylus/mixin.styl"

.header
	color: #fff
	background-color:rgba(7,17,27,0.5)
	position: relative
	.content-wapper
		padding: 24px 12px 18px 24px
		font-size: 0
		position: relative
		.avatar
			display: inline-block
			img
				width: 64px
				height: 64px
				border-radius: 2px
		.content
			display: inline-block
			vertical-align: top
			margin-left: 16px
			font-size: 14px
			.title
				margin: 2px 0 8px 0
				padding-left:34px
				font-size: 16px
				bg-image('./brand')
				background-size:auto 100%
				background-repeat: no-repeat
				background-position: left bottom
			.description
				margin-bottom: 10px
				line-height: 12px
				font-size: 12px
			.support
				.icon
					display: inline-block
					vertical-align: top
					width: 12px
					height: 12px
					margin-right: 4px
					background-size:12px 12px
					background-repeat: no-repeat
					&.decrease
						bg-image('decrease_1')
					&.decrease
						bg-image('discount_1')
					&.decrease
						bg-image('guarantee_1')
					&.decrease
						bg-image('invoice_1')
					&.decrease
						bg-image('special_1')
				.text
					font-size: 10px
					line-height: 12px
					vertical-align: text-top
		.support-count
			position: absolute
			right: 12px 
			bottom: 18px
			padding: 0 8px
			height: 24px
			line-height: 24px
			border-radius: 14px
			background: rgba(0,0,0,0.2)
			text-align: center
			.count
				font-size: 12px
				color: rgb(255,255,255)
			i
				font-size: 12px
	.bulletin-wrapper
		height: 28px
		font-size: 12px
		line-height: 28px
		color: rgb(255,255,255)
		bg-image('bulletin')
		background-color: rgba(7,17,27,0.2)
		background-repeat: no-repeat
		background-position: 5px center
		background-size: auto 18px
		overflow: hidden
		white-space: nowrap
		text-overflow: ellipsis
		padding:0 20px 0 45px
		position: relative
		i
			position: absolute
			right: 6px
			font-size:12px
			top: 50%
			transform: translateY(-50%)
	.background-header
		z-index: -1
		position: absolute
		top: 0
		left: 0
		right: 0
		bottom: 0
		overflow:hidden
		img
			width:100%
			height:auto
			filter: blur(10px)
			
			
			
			
		
		