@import "./../../common/stylus/mixin.styl"

.header
	color: #fff
	background: #000
	.content-wapper
		padding: 24px 12px 18px 24px
		font-size: 0
		position: relative
		.avatar
			display: inline-block
			img
				width: 64px
				height: 64px
				border-radius: 2px
		.content
			display: inline-block
			vertical-align: top
			margin-left: 16px
			font-size: 14px
			.title
				margin: 2px 0 8px 0
				padding-left:34px
				font-size: 16px
				bg-image('./brand')
				background-size:auto 100%
				background-repeat: no-repeat
				background-position: left bottom
			.description
				margin-bottom: 10px
				line-height: 12px
				font-size: 12px
			.support
				.icon
					display: inline-block
					vertical-align: top
					width: 12px
					height: 12px
					margin-right: 4px
					background-size:12px 12px
					backgrouind-repeat: no-repeat
					&.decrease
						bg-image('decrease_1')
					&.decrease
						bg-image('discount_1')
					&.decrease
						bg-image('guarantee_1')
					&.decrease
						bg-image('invoice_1')
					&.decrease
						bg-image('special_1')
				.text
					font-size: 10px
					line-height: 12px
					vertical-align: text-top
		.support-count
			position: absolute
			right: 12px 
			bottom: 18px
			padding: 0 8px
			height: 24px
			line-height: 24px
			border-radius: 14px
			background: rgba(0,0,0,0.5)
			text-align: center
			span
				font-size: 12px